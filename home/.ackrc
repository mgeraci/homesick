# file type support
--type-set=cjsx=.cjsx
--type-set=coffee=.coffee
--type-set=jsx=.jsx
--type-set=scss=.scss
--type-set=css=.css
--type-set=tsx=.tsx
--type-set=svg=.svg

# always color
--color

# page with less
--pager=less -rSFX

# ignore some dirs
--ignore-dir=bower_components
--ignore-dir=node_modules
--ignore-dir=mobile_web
--ignore-dir=flat
--ignore-dir=js/mobile_app/ads/
--ignore-dir=.happypack
--ignore-dir=.tmp
--ignore-dir=.sass-cache
--ignore-dir=src/locales/
--ignore-dir=src/types
--ignore-dir=dist

--ignore-file=is:tsconfig.tsbuildinfo
--ignore-file=is:yarn.lock
--ignore-file=is:.eslintcache
